<h1 class="title">Log in</h1>

<%= form_tag sessions_path, :class => "form-horizontal" do %>

<div class="form-group">
	<%= label_tag :email, "Email", :class => "col-md-1 col-md-offset-4 control-label"%>
	<div class = "col-md-3">
		<%= text_field_tag :email, params[:email], :class => "form-control" %>
	</div>
</div>

<div class="form-group">
  <%= label_tag :password, "Password", :class =>  "col-md-1 col-md-offset-4 control-label" %>
	<div class = "col-md-3">
		<%= password_field_tag :password, "", :class => "form-control" %>
	</div>
</div>

<div class="form-group">
  <div class="col-md-2 col-md-offset-4 right"><%= link_to "Forgot Password?", root_path %></div>
  <div class="col-md-2"><%= link_to "Create Account", signup_path %></div>
</div>

<div class="form-group">
	<div class="col-md-2 col-md-offset-5"><%= button_tag "Log in", :class => "btn btn-success btn-block" %></div>
</div>
<% end %>
