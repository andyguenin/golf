<h1 class="title">Create a new scraper</h1>
<%= form_for @scraper do |f| %>

<%= render :partial => 'errors/form_field_error', :locals => {:f => @scraper} %>

<div class="form-group">
<%= f.label :label %>
<%= f.text_field :label, :class => "form-control" %>
</div>

<div class="form-group">
<%= f.label :url %>
<%= f.text_field :url, :class => "form-control" %>
</div>

<div class="form-group">
<%= f.label :post_to %>
<%= f.text_field :post_to, :class => "form-control" %>
</div>

<div class="form-group">
<%= f.label :frequency %>
<%= f.text_field :frequency, :class => "form-control" %>
</div>

<div class="form-group">
<%= f.label :starttime %>
<%= f.text_field :starttime, :class => "form-control" %>
</div>

<div class="form-group">
<%= f.label :endtime %>
<%= f.text_field :endtime, :class => "form-control" %>
</div>

  <p class="button"><%= f.submit :class => "btn btn-success"%></p>
	
<% end %>
