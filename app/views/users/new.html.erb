<h1 class="title">Sign Up</h1>

<%= form_for @user, :url => users_path(:activation => params[:activation], :email => params[:email]), :html => {:class => "form-horizontal"}, :method => :post do |f| %>
      <div class="form-group">
	<%= f.label :name, "Full Name", :class => "col-md-2 col-md-offset-3 control-label" %>
	<div class="col-md-3">
	  <%= f.text_field :name %>
	</div>
      </div>
      <div class="form-group">
	<%= f.label :email , :class => "col-md-2 col-md-offset-3 control-label" %>
	<div class="col-md-3">
	  <%= f.text_field :email %>
	</div>
      </div>
      <div class="form-group">
	<%= f.label :password , :class => "col-md-2 col-md-offset-3 control-label" %>
	<div class="col-md-3">
	  <%= f.password_field :password %>
	</div>
      </div>
      <div class="form-group">
	<%= f.label :password_confirmation , :class => "col-md-2 col-md-offset-3 control-label" %>
	<div class="col-md-3">
	  <%= f.password_field :password_confirmation %>
	</div>
      </div>
  
      <div class="form-group">
	<div class="col-md-2 col-md-offset-5"><%= f.submit "Sign up", :class => "btn btn-success btn-block col-md-2" %></div>
      </div>
<% end %>
