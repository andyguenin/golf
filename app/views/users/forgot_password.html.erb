<h1 class="title">Forgot Password</h1>
<div class="row">
<%= form_tag send_reset_path, :class => "form-horizontal", method: "get" do %>
<div class="form-group">
  <%= label_tag :login, "Email or Username", :class => "col-md-2 col-md-offset-3 control-label" %>
  <div class = "col-md-3">
    <%= text_field_tag :login, params[:login], :class => "form-control" %>
  </div>
</div>

<div class="form-group">
	<div class="col-md-2 col-md-offset-5"><%= button_tag "Reset Password", :class => "btn btn-success btn-block" %></div>
</div>
<% end %>
</div>
