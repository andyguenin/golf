<h1 class="title">Edit Account</h1>
<%= form_for @user, :html => {:class => "form-horizontal"} do |f| %>
      <% if @user.errors.any? %>
				<div class="error_messages">
					<ul>
						<% for message in @user.errors.full_messages %>
						  <li><%= message %></li>
						<%end%>
					</ul>
				</div>
			<% end %>
      <div class="form-group">
	<%= f.label :name, "Full Name", :class => "col-md-2 col-md-offset-3 control-label" %>
	<div class="col-md-3">
	  <%= f.text_field :name, :class => "form-control" %>
	</div>
      </div>
      
	       <div class="form-group">
	 	<%= f.label :email , :class => "col-md-2 col-md-offset-3 control-label" %>
	 	<div class="col-md-3">
	 	  <%= f.text_field :email, :class => "form-control" %>
	 	</div>
	       </div>
			       
      <div class="form-group">
	<%= f.label :password , :class => "col-md-2 col-md-offset-3 control-label" %>
	<div class="col-md-3">
	  <%= f.password_field :password, :class => "form-control" %>
	</div>
      </div>
      <div class="form-group">
	<%= f.label :password_confirmation , :class => "col-md-2 col-md-offset-3 control-label" %>
	<div class="col-md-3">
	  <%= f.password_field :password_confirmation, :class => "form-control" %>
	</div>
      </div>
  
      <div class="form-group">
	<div class="col-md-2 col-md-offset-5"><%= f.submit "Update User", :class => "btn btn-success btn-block col-md-2" %></div>
      </div>
<% end %>
