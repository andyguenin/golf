<h1 class="title">Reset Password</h1>
<%= form_tag({controller: "users", action: "fix_password", key: @user.forgot_password, username: @user.username}, class: "form-horizontal") do %>
<% if @user.errors.any? %>
  <div class="error_messages">
    <h2>There was an error</h2>
    <ul>
      <% for message in @user.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	<div class="form-group">
	  <%= label_tag :password, "Password", :class =>  "col-md-1 col-md-offset-4 control-label" %>
		<div class = "col-md-3">
			<%= password_field_tag :password, "", :class => "form-control" %>
		</div>
	</div>
	
	<div class="form-group">
	  <%= label_tag :password_confirmation, "Password Confirmation", :class =>  "col-md-1 col-md-offset-4 control-label" %>
		<div class = "col-md-3">
			<%= password_field_tag :password_confirmation, "", :class => "form-control" %>
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-md-2 col-md-offset-5"><%= button_tag "Log in", :class => "btn btn-success btn-block" %></div>
	</div>
<% end%>