<!DOCTYPE html>
<html>
<head>
  <title>rSpool</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container full">
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
              class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
            </a>
            <%= link_to "PGA Challenge", root_url, :class=>"brand"%>
            <div class="nav-collapse">
              <ul class="nav">
                <li <%= print_menu_active(:home) %>><a href="/"><i class="icon-home icon-white"></i>Home</a></li>
                <li <%= print_menu_active(:groups) %>><%= link_to "Groups", groups_url %></li>
                <li <%= print_menu_active(:pools) %>><a href="#">Pools</a></li>
                <li <%= print_menu_active(:tournament) %>><a href="#">Standings</a></li>
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">About
                  <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><a href="#">The Rules</a></li>
                    <li><a href="#">Credits</a></li>
                  </ul>
                </li>
              </ul>
              <div id="user_nav" class="navbar-text pull-right">
                <% if current_user %>
                Logged in as: <%= current_user.email %>
                <%= link_to "Log out", logout_path %>
                <% else %>
                <%= link_to "Sign up", '#myModal', "data-toggle"=>"modal" %> or
                <%= link_to "log in", login_path %>
                <% end %>
              </div>
            </div>
            <!-- /.nav-collapse -->
          </div>
          <!-- /.container -->
          <!-- /.navbar-inner -->
        </div></div>
    <div class="row">
      
        <div class="span12 main-cont">

          <br />
          <% flash.each do |name, msg| %>
          <div id=<%= "flash_#{name}" %> class=<%= "alert alert-#{name}" %>>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= msg %>
          </div>
          <% end %>
          <%= yield %>
          <%= params.inspect %>
      </div>
    </div>
  </div>
</div>
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                ×</button>
            <h3 id="myModalLabel">
                Create Account</h3>
        </div>
        <div class="modal-body">
            <form>
            <fieldset>
                <label>
                    Username</label>
                <input type="text" placeholder="Create username…">
                <label>
                    Password</label>
                <input type="text" placeholder="Create password…">
                <label>
                    Email</label>
                <input type="text" placeholder="Type email…">
            </fieldset>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">
                Close</button>
            <button class="btn btn-primary">
                Submit</button>
        </div>
    </div>
  </body>
</html>
